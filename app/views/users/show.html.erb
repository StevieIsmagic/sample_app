<%= provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">

    <section class="user_info">
		  <h1>
			<%= gravatar_for @user %></br></br></br></br></br>
			<%= @user.name %><hr>
    ABOUT ME:<hr>
    
    FAMILY BACKGROUND:<hr>

    LIFE GOALS: <hr>
    
     CONTACT INFORMATION:<hr>

		  </h1>
	  </section>

    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>

</div>

